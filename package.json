{
	"name": "weather-api-express",
	"module": "src/main.ts",
	"type": "module",
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"scripts": {
		"dev": "NODE_ENV=development bun --watch ./src/main.ts --watch",
		"build": "rimraf ./build && bun build --target bun ./src/main.ts --outdir=build && cp .env.production package.json ./build/",
		"start:pro": "pm2 start 'NODE_ENV=production bun main.js' --name habits_api --cron-restart='0 * * * *'",
		"tests": "NODE_ENV=test bun test",
		"tests:dev": "NODE_ENV=test bun --watch test",
		"lint": "eslint ./src --cache",
		"lint:fix": "eslint ./src --fix --cache",
		"lint:knip": "knip",
		"lint:prettier": "prettier . --write --cache --log-level silent",
		"lint:spelling": "cspell . --quiet --cache",
		"prepare": "husky install"
	},
	"dependencies": {
		"axios": "^1.6.5",
		"body-parser": "^1.20.2",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"envalid": "^8.0.0",
		"express": "^4.18.2",
		"yup": "^1.3.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.4",
		"@commitlint/config-conventional": "^18.4.4",
		"@cspell/dict-pl_pl": "^3.0.1",
		"@types/body-parser": "^1.19.5",
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.10.7",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^6.18.1",
		"@typescript-eslint/parser": "^6.18.1",
		"bun-types": "^1.0.21",
		"chance": "^1.1.11",
		"cspell": "^8.3.2",
		"cspell-dict-pl_pl": "^1.1.1",
		"dotenv": "^16.3.1",
		"eslint": "^8.56.0",
		"eslint-plugin-deprecation": "^2.0.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jest": "^27.6.1",
		"eslint-plugin-jsdoc": "^48.0.2",
		"eslint-plugin-jsonc": "^2.11.2",
		"eslint-plugin-n": "^16.6.2",
		"eslint-plugin-no-only-tests": "^3.1.0",
		"eslint-plugin-perfectionist": "^2.5.0",
		"eslint-plugin-regexp": "^2.2.0",
		"eslint-plugin-sort-destructure-keys": "^1.5.0",
		"eslint-plugin-sort-keys-fix": "latest",
		"eslint-plugin-typescript-sort-keys": "latest",
		"husky": "^8.0.3",
		"jsonc-eslint-parser": "^2.4.0",
		"knip": "^3.13.0",
		"lint-staged": "^15.2.0",
		"prettier": "^3.1.1",
		"rimraf": "^5.0.5",
		"supertest": "^6.3.3",
		"typescript": "^5.3.3"
	}
}
